{
  "name": "bulletin",
  "pattern": "/bulletin",
  "acceptedVerbs": "GET",
  "debug": false,
  "tasks": [
    "context.metaData.commonTasks.authRequired",
    "context.metaData.commonTasks.currentSite",
    "context.metaData.commonTasks.profileData",
    "context.metaData.commonTasks.bulletinName",
    {
      "name": "notifications",
      "taskModule": "mysql",
      "config": {
        "connectionName": "notifications",
        "queryTemplates": {
          "stop_all_emails": ">context.metaData.handlebars.queries.notifications_toggle-bulletin"
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "bulletin_days",
      "taskModule": "mysql",
      "config": {
        "connectionName": "notifications",
        "queryTemplates": {
          "set_bulletin_days": ">context.metaData.handlebars.queries.notifications_set-bulletin-days"
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "destination",
      "taskModule": "redirect",
      "config": {
        "location": ">request.headers.referer"
      }
    }
  ]
}
