{
  "name": "home",
  "debug": false,
  "pattern": ["/", ""],
  "metaData": {
    "hideSearch": true
  },
  "tasks": [
    "context.metaData.commonTasks.currentSite",
    "context.metaData.commonTasks.authNotRequired",
    {
      "name": "reroute",
      "taskModule": "reroute",
      "config": {
        "if": [
          { "missing": ["data.auth.uid"] },
          "home_not_authenticated",
          "home_authenticated"
        ]
      }
    }
  ]
}