{
  "name": "premium_activate",
  "debug": true,
  "pattern": "/activate-premium",
  "tasks": [
    "context.metaData.commonTasks.currentSite",
    "context.metaData.commonTasks.authRequired",
    "context.metaData.commonTasks.profileData",
    "context.metaData.commonTasks.bulletinName",
    {
      "name": "togglePremium",
      "taskModule": "firebaseRtbSet",
      "renderer": "handlebars",
      "config": {
        "appName": "fundingscotland",
        "pathTemplate": "/users/{{default data.auth.uid 'no-such-profile'}}/isPremium",
        "setOrUpdate": "set",
        "dataTemplate": "{{#compare (slugify @root.data.auth.passwordHash) @root.request.params.query.passwordHash}}{{dateMath 'now+1y'}}{{else}}false{{/compare}}"
      }
    },
    {
      "name": "updateSubscription",
      "taskModule": "mysql",
      "renderer": "handlebars",
      "config": {
        "connectionName": "notifications",
        "queryTemplates": {
          "subscriptions": "CALL _renameSubscription({{{mysqlEscape @root.data.auth.email}}}, 'fs-bulletin-default', 'fs-bulletin-default-premium');"
        }
      }
    },
    {
      "name": "url",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "output": "data",
        "template": "/premium-activated"
      }
    },
    {
      "name": "destination",
      "taskModule": "redirect",
      "config": {
        "location": ">data.url"
      }
    }
  ]
}