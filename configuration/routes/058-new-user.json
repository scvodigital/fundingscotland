{
  "name": "new-user",
  "pattern": "/new-user",
  "acceptedVerbs": "GET",
  "debug": false,
  "tasks": [
    "context.metaData.commonTasks.authRequired",
    "context.metaData.commonTasks.currentSite",
    "context.metaData.commonTasks.bulletinName",
    {
      "name": "notifications",
      "taskModule": "mysql",
      "config": {
        "connectionName": "notifications",
        "queryTemplates": {
          "toggle_bulletin": ">context.metaData.handlebars.queries.notifications_toggle-bulletin"
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "bulletin_days",
      "taskModule": "mysql",
      "config": {
        "connectionName": "notifications",
        "queryTemplates": {
          "set_bulletin_days": ">context.metaData.handlebars.queries.notifications_set-bulletin-days"
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "user-profile",
      "taskModule": "firebaseRtbSet",
      "config": {
        "appName": "fundingscotland",
        "pathTemplate": "/users/{{default data.auth.uid 'no-such-profile'}}/",
        "setOrUpdate": "set",
        "dataTemplate": "{ \"organisation\": {{{stringify (default @root.request.params.query.organisation 'None')}}}, \"postcode\": {{{stringify (default @root.request.params.query.postcode 'None')}}} }"
      },
      "renderer": "handlebars"
    },
    {
      "name": "destination",
      "taskModule": "redirect",
      "config": {
        "location": ">request.headers.referer"
      }
    }
  ]
}
