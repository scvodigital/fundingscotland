{
  "name": "notes",
  "pattern": "/notes",
  "debug": false,
  "metaData": {
    "hideSearch": true,
    "sidebarButton": {
      "icon": "search",
      "tooltip": "Search",
      "classes": "hide-md hide-lg"
    }
  },
  "defaultParams": {
    "context": "results"
  },
  "tasks": [
    "context.metaData.commonTasks.authRequired",
    "context.metaData.commonTasks.currentSite",
    "context.metaData.commonTasks.profileData",
    "context.metaData.commonTasks.bulletinName",
    "context.metaData.commonTasks.menus",
    {
      "name": "notes_funds",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../data/elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": [
          {
            "name": "open",
            "index": "{$../data/elasticsearch-index.txt}",
            "type": "fs-fund",
            "template": ">context.metaData.handlebars.queries.funds_notes-open"
          },
          {
            "name": "closed",
            "index": "{$../data/elasticsearch-index.txt}",
            "type": "fs-fund",
            "template": ">context.metaData.handlebars.queries.funds_notes-closed"
          }
        ]
      },
      "renderer": "handlebars"
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.pages_page-head-tags",
              "body": ">context.metaData.handlebars.templates.funds_notes",
              "sidebar": ">context.metaData.handlebars.templates.account_sidebar"

            },
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}