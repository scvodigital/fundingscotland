{
  "name": "post",
  "pattern": "/news/*slug",
  "debug": false,
  "tasks": [
    "context.metaData.commonTasks.currentSite",
    "context.metaData.commonTasks.authNotRequired",
    "context.metaData.commonTasks.profileData",
    "context.metaData.commonTasks.bulletinName",
    "context.metaData.commonTasks.menus",
    {
      "name": "primaryResponse",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../data/elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": {
          "index": "{$../data/elasticsearch-index.txt}",
          "type": "fs-post-default,fs-post-srn,fs-post-aberdeen,fs-post-aberdeenshire,fs-post-angus,fs-post-argyll-bute,fs-post-clackmannanshire,fs-post-dumfries-galloway,fs-post-dundee,fs-post-eastayrshire,fs-post-eastdunbartonshire,fs-post-eastlothian,fs-post-eastrenfrewshire,fs-post-edinburgh,fs-post-falkirk,fs-post-fife,fs-post-glasgow,fs-post-highland,fs-post-inverclyde,fs-post-midlothian,fs-post-moray,fs-post-na-h-eileanan-siar,fs-post-northayrshire,fs-post-northlanarkshire,fs-post-orkney,fs-post-perth-kinross,fs-post-renfrewshire,fs-post-scottish-borders,fs-post-shetland,fs-post-southayrshire,fs-post-southlanarkshire,fs-post-stirling,fs-post-westdunbartonshire,fs-post-westlothian",
          "template": ">context.metaData.handlebars.queries.posts_post"
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.pages_page-head-tags",
              "body": ">context.metaData.handlebars.templates.posts_post"
            },
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}