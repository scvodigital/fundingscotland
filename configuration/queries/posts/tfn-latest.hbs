{
  "size": {{#compare @root.route.name "posts"}}10{{else}}4{{/compare}},
  "_source": [
    "title",
    "site",
    "path",
    "image.medium",
    "d_published"
  ],
  "query": {
    "function_score": {
      "query": {
        "bool": {
          "must": [
            {
              "term": {
                "k_post_status": "publish"
              }
            },
            {
              "term": {
                "type": "tfn-post"
              }
            },
            {
              "nested": {
                "path": "term_category",
                "query": {
                  "bool": {
                    "must": [
                      {
                        "term": {
                          "term_category.slug": "funding-and-finance"
                        }
                      }
                    ]
                  }
                }
              }
            },
            {
              "terms": {
                "k_post_type": [
                  "news",
                  "list",
                  "feature"
                ]
              }
            }
          ]
        }
      },
      "functions": [
        {
          "gauss": {
            "d_published": {
              "scale": "3d",
              "decay": 0.1
            }
          }
        }
      ],
      "score_mode": "multiply"
    }
  }
}
